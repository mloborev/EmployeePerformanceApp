@model EmployeePerformanceApp.Models.LoginModel
@{ 
    Layout = null;
}

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<body>
    <h2>Sign in</h2>


    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login">Login</label><br />
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <input type="submit" value="Sign in" />
            </div>
        </div>
    </form>
</body>
